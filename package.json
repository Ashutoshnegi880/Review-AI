{
  "name": "review-ai",
  "displayName": "Review-AI",
  "description": "Select the piece of code and use genAI to review to the code and get suggestion.",
  "publisher": "AshutoshSinghNegi",
  "icon": "images/review-ai-icon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extension",
          "title": "Extension",
          "icon": "images/review-ai-icon.svg"
        }
      ]
    },
    "views": {
      "extension": [
        {
          "type": "webview",
          "id": "extension.sidebar",
          "name": "Extension Sidebar"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.openSidebar",
        "title": "Open Extension Sidebar"
      }
    ]
  },
  "activationEvents": [
    "onCommand:extension.openSidebar"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0"
  },
  "dependencies": {
    "gpt4js": "^1.7.8"
  }
}

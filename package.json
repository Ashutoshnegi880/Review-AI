{
  "name": "review-ai",
  "displayName": "Review-AI",
  "description": "Select the piece of code and use genAI to review to the code and get suggestion.",
  "publisher": "AshutoshSinghNegi",
  "icon": "images/review-ai-icon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.reviewCode",
        "title": "Review Selected Code"
      }
    ],
    "configuration": {
      "properties": {
        "genAiCodeReview.codingStandards": {
          "type": "string",
          "default": {
            "functionNamingConvention": "PascalCase",
            "endWithSemicolon": true,
            "noMagicNumbers": true,
            "noHardcodedStrings": true
          },
          "description": "Your custom coding standards for code review."
        }
      }
    },
    "viewsContainers": {
    "activitybar": [
      {
        "id": "reviewAiSidebar",
        "title": "Review AI",
        "icon": "images/review-ai-icon.svg"
      }
    ]
  },
  "views": {
    "reviewAiSidebar": [
      {
        "id": "reviewAiView",
        "name": "Code Review"
      }
    ]
  }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0"
  },
  "dependencies": {
    "gpt4js": "^1.7.8"
  }
}
